{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

{{ include('layouts/partials/_nav.html.twig') }}

 <section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-3 col-lg-3 col-xl-3">
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <h3 class="mb-5">S'inscrire</h3>
  
          </div>

        
          <div class="row">
          {{ form_start(registrationForm) }}
          <!-- Email input -->
            <div class="form-outline mb-4">
                {{ form_row(registrationForm.email) }}
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
            </div>
            
        
          </div>

            <div class="col-xs-12">
              {{ form_row(registrationForm.agreeTerms) }} 
                <button type="submit" class="btn btn-primary btn-lg"style="padding-left: 2.5rem; padding-right: 2.5rem;">S'inscrire</button>
              {{ form_end(registrationForm) }}
            </div>
            
     
      </div>
    </div>
  </div>
 
</section>

{{ include('layouts/partials/_footer.html.twig') }}

{% endblock %}
